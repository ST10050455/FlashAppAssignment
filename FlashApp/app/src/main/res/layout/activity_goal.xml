<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FAFAFA"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/Homebtn"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Back to Dashboard"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/cate_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MONTHLY GOALS"
                    android:textColor="#121010"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginStart="-28dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Circle Amount Display -->
        <TextView
            android:id="@+id/current_goal_amount"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/dark_violet_circle_border"
            android:gravity="center"
            android:text="R0,00"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- MONTH Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONTH"
            android:textColor="@color/DarkViolet"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/month_spinner"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/purple_button_border"
            android:paddingStart="10dp"
            android:layout_marginBottom="24dp" />

        <!-- Budget Goal Inputs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONTHLY BUDGET GOAL"
            android:textColor="@color/DarkOrange"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />
        <!-- MIN GOAL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MIN GOAL"
            android:textColor="@color/DarkOrange"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="italic"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/minGoalInput"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint=" R0.00"
            android:inputType="numberDecimal"
            android:background="@drawable/orange_button_border"
            android:fontFamily="monospace"
            android:textColor="@color/DarkOrange"
            android:textColorHint="@color/DarkOrange"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:layout_marginBottom="16dp" />

        <!-- MAX GOAL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAX GOAL"
            android:textColor="@color/DarkOrange"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="italic"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/maxGoalInput"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint=" R0.00"
            android:inputType="numberDecimal"
            android:background="@drawable/orange_button_border"
            android:fontFamily="monospace"
            android:textColor="@color/DarkOrange"
            android:textColorHint="@color/DarkOrange"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:layout_marginBottom="24dp" />

        <!-- Set Goal Button -->
        <Button
            android:id="@+id/set_goal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET GOAL"
            android:textColor="@color/BlueViolet"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:background="@drawable/purple_button_border"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
