<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FAFAFA"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Back to Dashboard"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/cate_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ADD NEW CATEGORY"
                    android:textColor="#121010"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginStart="-28dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Toggle Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CATEGORY TYPE"
            android:textColor="@color/DarkViolet"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace" />

        <ToggleButton
            android:id="@+id/toggle_type"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textOff="EXPENSE"
            android:textOn="INCOME"
            android:fontFamily="monospace"
            android:background="@drawable/filled_purple_btn"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <!-- CATEGORY NAME -->
        <TextView
            android:id="@+id/category_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:text="CATEGORY NAME"
            android:textColor="@color/DarkViolet"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cate_name"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/purple_button_border"
            android:fontFamily="monospace"
            android:hint=" CATEGORY NAME"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColor="@color/DarkViolet"
            android:textColorHint="@color/DarkViolet"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/description_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:text="DESCRIPTION"
            android:textColor="@color/DarkViolet"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cate_description"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/purple_button_border"
            android:fontFamily="monospace"
            android:hint=" DESCRIPTION"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColor="@color/DarkViolet"
            android:textColorHint="@color/DarkViolet"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- LIMIT -->
        <TextView
            android:id="@+id/limit_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:text="LIMIT"
            android:textColor="@color/DarkOrange"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cate_limit"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/orange_button_border"
            android:fontFamily="monospace"
            android:hint=" LIMIT"
            android:inputType="number"
            android:paddingStart="10dp"
            android:textColor="@color/DarkOrange"
            android:textColorHint="@color/DarkOrange"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- ICON LABEL -->
        <TextView
            android:id="@+id/icon_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:text="CHOOSE ICON"
            android:textColor="@color/DarkViolet"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- ICONS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bulb"
                android:background="@drawable/purple_button_border"
                android:padding="6dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/gasstation"
                android:background="@drawable/purple_button_border"
                android:padding="6dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/deliveryman"
                android:background="@drawable/purple_button_border"
                android:padding="6dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/plane"
                android:background="@drawable/purple_button_border"
                android:padding="6dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/grocery"
                android:background="@drawable/purple_button_border"
                android:padding="6dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <!-- SAVE BUTTON -->
            <Button
                android:id="@+id/cate_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/purple_button_border"
                android:text="Save"
                android:textColor="@color/BlueViolet"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
