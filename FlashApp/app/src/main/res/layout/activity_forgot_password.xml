<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FAFAFA"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Back to Dashboard"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/forgot_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FORGOT PASSWORD?"
                    android:textColor="#121010"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginStart="-28dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Username Input Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textColor="@color/DarkViolet"
            android:letterSpacing="0.3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint=" Enter your username"
            android:inputType="text"
            android:background="@drawable/purple_button_border"
            android:fontFamily="monospace"
            android:textColor="@color/DarkViolet"
            android:textColorHint="@color/DarkViolet"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:layout_marginBottom="24dp" />

        <!-- Recover Button -->
        <Button
            android:id="@+id/recover_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECOVER PASSWORD"
            android:textStyle="bold"
            android:textColor="@color/BlueViolet"
            android:fontFamily="monospace"
            android:background="@drawable/purple_button_border"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Result Message -->
        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
